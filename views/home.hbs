<!-- Section de recherche -->
<section>
    <div class="search-container">
        <form method="post" action="/search">
            <h2>Recherche Pokémon</h2>
            <div class="input-group">
                <input
                    type="text"
                    id="name"
                    name="search"
                    placeholder="Nom du Pokémon"
                    value=""
                />
                <label for="pokemon">Nom du Pokémon</label>
            </div>
        </form>
    </div>
    <!-- Section home -->
    <div class="home-container">
        <h1>Pokedex</h1>
        <ol class="pokedex">
            {{#each pokemons.results}}
                <li>
                    <a href="/{{this.name}}">{{capitalize this.name}}</a>
                </li>
            {{/each}}
        </ol>

    </div>
</section>